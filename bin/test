#!/bin/sh

set -o pipefail

if [ $# -eq 0 ]; then
    echo "Please specify a target, i.e. iOS or tvOS."
  exit 1
fi

if [ "$1" == "iOS" ]; then
  DESTINATION='platform=iOS Simulator,name=iPhone 8,OS='
else
  DESTINATION='platform=tvOS Simulator,name=Apple TV 1080p,OS='
fi

xcodebuild \
  -destination "$DESTINATION$2" \
  -scheme ReactiveExtensions-$1 \
  clean test \
  | tee $CIRCLE_WORKING_DIRECTORY/output/xcode_raw.log \
  | xcpretty
